<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h3>All Flights</h3>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Detail</th>
          <th>Airline</th>
          <th>Airport</th>
          <th>Flight #</th>
          <th>Departure</th>
        </tr>
      </thead>
      <tbody>
        <% flights.forEach(function(f) { %>
          <tr>
            <td> <a href="/flights/<%=f._id%>"> Details</a> </td>
            <td> <%= f.airline %></td>
            <td><%= f.airport %></td>
            <td><%= f.flightNo %></td>
            <td><%= f.departs %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
